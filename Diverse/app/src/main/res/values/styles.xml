<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_5_blue</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#5a94db</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="videoTimeDurationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_3_solid_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 顶部划入 搜索SearchFragment 进入动画效果-->
    <style name="animSearchFragment">
        <item name="android:windowEnterAnimation">@anim/top_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_top</item>
    </style>


    <style name="SplashStyle" parent="AppTheme">
        <!--<item name="android:windowDisablePreview">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="news_text_style">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>
    <style name="news_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
